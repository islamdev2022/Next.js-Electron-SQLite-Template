{
  "name": "door-store-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\"",
    "rebuild": "electron-rebuild",
    "postinstall": "npm run rebuild",
    "build:next": "next build",
    "start:next": "next start -p 3000",
    "dist": "npm run build:next && electron-builder",
    "build": "npm run build:next && electron-builder --prepackaged"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron": "^37.2.6",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.6.12",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.jijel.doorstore",
    "productName": "DoorStore",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md}"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
