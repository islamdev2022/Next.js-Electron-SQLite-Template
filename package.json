{
  "name": "door-store-app",
  "version": "0.1.0",
  "description": "A modern desktop application template built with Next.js, Electron, and SQLite",
  "author": "Birouk Mohammed islam <islam.birouk.2004@gmail.com>",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev:next": "cross-env NODE_ENV=development next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:electron\"",
    "postinstall": "electron-builder install-app-deps",

    "build:next": "cross-env NODE_ENV=production next build",
    "start:next": "cross-env NODE_ENV=production next start -p 3000",

    "dist": "npm run build:next && cross-env NODE_ENV=production electron-builder",
    "build": "npm run build:next && cross-env NODE_ENV=production electron-builder --prepackaged"
},
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.6.12",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.jijel.doorstore",
    "productName": "DoorStore",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "out/**",
      "electron/**",
      "src/**",
      "package.json",
      "node_modules/**",
      "database/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md}"
  ],
"extraResources": [
  { "from": "database/schema.sql", "to": "schema.sql" }
],

    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "forceCodeSigning": false
    }
  }
}
